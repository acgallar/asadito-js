}

.footer-logo {
	display: block;
	margin: 0 auto;
	width: 150px;
}

.flotante {
	position: absolute;
    right: 20px;
    bottom: 20px;
    font-size: 10px;
    text-shadow: none;
}

@media (max-width: 991px) {

.flotante {
	position: relative;
